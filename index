<body>
    <div class="container">
        <div class="header">
            <h1>üç∑ –í–∏–Ω–Ω—ã–π —à–∫–∞—Ñ</h1>
            <div class="total-value" id="totalValue">–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å: 0 ‚ÇΩ</div>
        </div>
        <div class="nav">
            <button class="btn active" onclick="showSection('collection')">–ö–æ–ª–ª–µ–∫—Ü–∏—è</button>
            <button class="btn" onclick="showSection('add')">–î–æ–±–∞–≤–∏—Ç—å</button>
            <button class="btn" onclick="showSection('stats')">–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞</button>
        </div>
        <div id="collection" class="section active">
            <div id="wineList"></div>
        </div>
        <div id="add" class="section">
            <div class="add-menu">
                <button class="add-btn" onclick="showForm(true)">–ù–æ–≤–æ–µ –≤–∏–Ω–æ</button>
                <button class="add-btn" onclick="showForm(false)">–£–∂–µ –ø–∏–ª–∏!</button>
            </div>
            <form id="wineForm" style="display:none;">
                <div class="form-group photo-input">
                    <label>–§–æ—Ç–æ</label>
                    <input type="file" id="photo" accept="image/*" capture="environment">
                    <img id="photoPreview" class="photo-preview" style="display:none;">
                </div>
                <div class="form-group">
                    <label>–°—Ç—Ä–∞–Ω–∞</label>
                    <input type="text" id="country" required>
                </div>
                <div class="form-group">
                    <label>–ù–∞–∑–≤–∞–Ω–∏–µ</label>
                    <input type="text" id="name" required>
                </div>
                <div class="form-group">
                    <label>–°–æ—Ä—Ç –≤–∏–Ω–æ–≥—Ä–∞–¥–∞</label>
                    <input type="text" id="grape" required>
                </div>
                <div class="form-group">
                    <label>–ì–æ–¥</label>
                    <input type="number" id="year" required min="1900" max="2030">
                </div>
                <div class="form-group">
                    <label>–¶–µ–Ω–∞ (‚ÇΩ)</label>
                    <input type="number" id="price" required min="0" step="0.01">
                </div>
                <button type="submit" class="btn-primary">–î–æ–±–∞–≤–∏—Ç—å –≤ —à–∫–∞—Ñ</button>
            </form>
        </div>
        <div id="stats" class="section">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-value" id="totalDrunk">0</div>
                    <div>–í—ã–ø–∏—Ç–æ –±—É—Ç—ã–ª–æ–∫</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value" id="spentMonth">0 ‚ÇΩ</div>
                    <div>–í—ã–ø–∏—Ç–æ –∑–∞ –º–µ—Å—è—Ü</div>
                </div>
            </div>
            <h3 style="margin: 24px 0 12px;">–ü–æ —Å—Ç—Ä–∞–Ω–∞–º</h3>
            <div id="statsCountry"></div>
            <h3 style="margin: 24px 0 12px;">–ü–æ —Å–æ—Ä—Ç–∞–º</h3>
            <div id="statsGrape"></div>
        </div>
    </div>
    <script>
        let wines = JSON.parse(localStorage.getItem('wines')) || [];
        let recognition;

        if ('webkitSpeechRecognition' in window) {
            recognition = new webkitSpeechRecognition();
            recognition.continuous = false;
            recognition.interimResults = false;
            recognition.lang = 'ru-RU';
        }

        function saveWines() {
            localStorage.setItem('wines', JSON.stringify(wines));
            updateTotal();
            renderCollection();
            updateStats();
        }

        function showSection(id) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.btn').forEach(b => b.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            event.target.classList.add('active');
            if (id === 'collection') renderCollection();
            if (id === 'stats') updateStats();
        }

        function showForm(isNew) {
            const form = document.getElementById('wineForm');
            form.style.display = 'block';
            form.onsubmit = addWine;
            document.querySelector('.add-menu').style.display = 'none';
            if (!isNew) {
                // –ü–æ–∫–∞–∑–∞—Ç—å —Å–ø–∏—Å–æ–∫ –≤—ã–ø–∏—Ç—ã—Ö –¥–ª—è –≤—ã–±–æ—Ä–∞ (—É–ø—Ä–æ—â–µ–Ω–Ω–æ –¥–æ–±–∞–≤–ª—è–µ–º –ø–µ—Ä–≤–æ–µ –≤—ã–ø–∏—Ç–æ–µ –∏–ª–∏ –Ω–æ–≤–æ–µ)
                alert('–í—ã–±–µ—Ä–∏—Ç–µ –∏–∑ –≤—ã–ø–∏—Ç—ã—Ö (—Ñ—É–Ω–∫—Ü–∏—è —É–ø—Ä–æ—â–µ–Ω–∞: –¥–æ–±–∞–≤—å—Ç–µ –Ω–æ–≤–æ–µ –¥–ª—è –¥–µ–º–æ)');
            }
        }

        function addWine(e) {
            e.preventDefault();
            const photo = document.getElementById('photo').files[0];
            const reader = new FileReader();
            reader.onload = function(e) {
                const wine = {
                    id: Date.now(),
                    photo: e.target.result,
                    country: document.getElementById('country').value,
                    name: document.getElementById('name').value,
                    grape: document.getElementById('grape').value,
                    year: document.getElementById('year').value,
                    price: parseFloat(document.getElementById('price').value),
                    drunk: false,
                    rating: 0,
                    notes: '',
                    drinkDate: null
                };
                wines.unshift(wine);
                saveWines();
                document.getElementById('wineForm').reset();
                document.getElementById('photoPreview').style.display = 'none';
                document.querySelector('.add-menu').style.display = 'flex';
                form.style.display = 'none';
            };
            if (photo) reader.readAsDataURL(photo);
            else reader.onload();
        }

        document.getElementById('photo').onchange = function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('photoPreview').src = e.target.result;
                    document.getElementById('photoPreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        };

        function renderCollection() {
            const list = document.getElementById('wineList');
            list.innerHTML = wines.map(wine => `
                <div class="wine-card ${wine.drunk ? 'drunk' : ''}">
                    ${wine.photo ? `<img src="${wine.photo}">` : ''}
                    <div class="wine-info">
                        <h3>${wine.name} ${wine.year}</h3>
                        <p>${wine.country} ‚Ä¢ ${wine.grape}</p>
                        <p class="wine-price">${wine.price} ‚ÇΩ</p>
                        ${wine.drunk ? `
                            <p>–û—Ü–µ–Ω–∫–∞: ${wine.rating}/10</p>
                            <p>${wine.notes}</p>
                        ` : ''}
                        <button class="btn-small btn-drink" onclick="drinkWine(${wine.id})">–í—ã–ø–∏—Ç—å</button>
                    </div>
                </div>
            `).join('');
        }

        function drinkWine(id) {
            const wine = wines.find(w => w.id === id);
            if (!wine.drunk) {
                wine.drunk = true;
                saveWines();
                setTimeout(() => {
                    const rating = prompt('–û—Ü–µ–Ω–∫–∞ (1-10):');
                    if (rating) {
                        wine.rating = parseInt(rating);
                        if (recognition) {
                            recognition.onresult = (e) => {
                                wine.notes = e.results[0][0].transcript;
                                saveWines();
                            };
                            recognition.start();
                        } else {
                            wine.notes = prompt('–í–ø–µ—á–∞—Ç–ª–µ–Ω–∏—è:');
                            saveWines();
                        }
                    }
                }, 100);
            }
        }

        function updateTotal() {
            const total = wines.filter(w => !w.drunk).reduce((sum, w) => sum + w.price, 0);
            document.getElementById('totalValue').textContent = `–û–±—â–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å: ${total.toFixed(0)} ‚ÇΩ`;
        }

        function updateStats() {
            const drunk = wines.filter(w => w.drunk);
            document.getElementById('totalDrunk').textContent = drunk.length;

            const now = new Date();
            const monthStart = new Date(now.getFullYear(), now.getMonth(), 1);
            const spentMonth = drunk.filter(w => w.drinkDate && new Date(w.drinkDate) >= monthStart)
                .reduce((sum, w) => sum + w.price, 0);
            document.getElementById('spentMonth').textContent = `${spentMonth.toFixed(0)} ‚ÇΩ`;

            // –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ —Å—Ç—Ä–∞–Ω–∞–º (—Ç–æ–ø 3)
            const countryStats = {};
            drunk.forEach(w => {
                countryStats[w.country] = (countryStats[w.country] || 0) + 1;
            });
            document.getElementById('statsCountry').innerHTML = Object.entries(countryStats)
                .sort((a,b) => b[1] - a[1]).slice(0,3)
                .map(([c, cnt]) => `<div>${c}: ${cnt}</div>`).join('');

            // –ü–æ —Å–æ—Ä—Ç–∞–º
            const grapeStats = {};
            drunk.forEach(w => {
                grapeStats[w.grape] = (grapeStats[w.grape] || 0) + 1;
            });
            document.getElementById('statsGrape').innerHTML = Object.entries(grapeStats)
                .sort((a,b) => b[1] - a[1]).slice(0,3)
                .map(([g, cnt]) => `<div>${g}: ${cnt}</div>`).join('');
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        updateTotal();
        renderCollection();
        updateStats();
    </script>
</body>
</html>
