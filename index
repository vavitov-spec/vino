        .drunk { text-decoration: line-through; opacity: 0.6; }
        #notes { min-height: 100px; resize: vertical; }
        .mic-btn { background: #007aff; color: white; border: none; padding: 12px; border-radius: 50%; cursor: pointer; position: absolute; right: 16px; top: 16px; }
        .rating { display: flex; gap: 4px; margin-top: 8px; }
        .rating input { width: auto; }
