        .btn-primary:active { transform: scale(0.98); }
        .wine-card { background: white; border-radius: 20px; padding: 20px; margin-bottom: 16px; box-shadow: 0 8px 24px rgba(0,0,0,0.08); position: relative; overflow: hidden; }
        .wine-card img { width: 80px; height: 80px; object-fit: cover; border-radius: 12px; float: left; margin-right: 16px; }
